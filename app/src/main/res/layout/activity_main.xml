<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activities.MainActivity">

    <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:theme="@style/ToolbarTheme"-->
            <!--android:layout_marginTop="8dp"-->
            <!--app:layout_constraintTop_toTopOf="parent"/>-->

    <GridView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:gravity="center_horizontal|center_vertical"
            android:numColumns="10"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:id="@+id/gridView"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Order"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="68dp"

            android:layout_height="79dp"
            android:background="#C2C2C2"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    <Button
            android:id="@+id/order_button"
            android:layout_width="202dp"
            android:layout_height="79dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="#64B5F6"
            android:text="ORDER"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#1A237E"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gridView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/button_cancel" />

    <View
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@+id/guideline"
            android:background="#000000"
            android:layout_marginLeft="280dp"
            app:layout_constraintBottom_toBottomOf="@+id/gridView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/order_number_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="108"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
            android:text="Sum:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/order_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="30sp"/>

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_cost_TV"
            app:layout_constraintBottom_toTopOf="@+id/order_button"
            app:layout_constraintEnd_toStartOf="@+id/gridView"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="30sp"/>

    <ListView
            android:id="@+id/order_ListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/total_cost_TV"
            app:layout_constraintEnd_toStartOf="@+id/gridView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:text="AMRITA CAFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="serif-monospace"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>