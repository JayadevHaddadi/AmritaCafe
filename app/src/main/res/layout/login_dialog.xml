<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Kitchen Printer:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="@+id/kitchen_button"
            app:layout_constraintTop_toTopOf="@+id/kitchen_button"/>

    <TextView
            android:text="Receipt Printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/receipt_button"
            app:layout_constraintBottom_toBottomOf="@+id/receipt_button"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receipt_TV"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            android:text="waiting..."
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kitchen_TV2"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:text="waiting..."
            android:visibility="invisible"/>

    <Button
            android:text="Next Order"
            android:layout_width="700dp"
            android:layout_height="100dp"
            android:id="@+id/next_button"
            app:layout_constraintTop_toBottomOf="@+id/receipt_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="Reprint Kitchen"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/kitchen_button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <Button
            android:text="Reprint Receipt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/receipt_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/kitchen_button"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receipt_progress"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kitchen_progress2"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>